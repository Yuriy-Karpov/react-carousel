{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "jsx": "react"
  },
  "exclude": [
    "./node_modules",
    "./lib"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
